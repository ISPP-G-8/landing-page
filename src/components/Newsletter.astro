const articles = [
  {
    title: 'Beneficios del BLW: autonomía y desarrollo',
    excerpt: 'Descubre cómo el Baby Led Weaning fomenta la independencia y una dieta saludable desde los primeros bocados.',
    img: '/newsletterpics/blw.jpg',
    url: '/newsletter/blw_benefits_consequences',
  },
  {
    title: 'Introducción temprana de alérgenos en la alimentación de tu bebé',
    excerpt: 'Conoce por qué introducir alimentos como huevo, cacahuete o pescado desde los primeros meses puede prevenir alergias.',
    img: '/newsletterpics/alergenos.jpg',
    url: '/newsletter/alergenos_tempranos',
  },
  {
    title: 'Alimentación materna durante la lactancia y su relación con las alergias en el bebé',
    excerpt: '¿Sabías que lo que comes durante la lactancia puede influir en la tolerancia del bebé a ciertos alimentos? Descúbrelo aquí.',
    img: '/newsletterpics/lactancia_alergias.jpg',
    url: '/newsletter/alimentacion_lactancia',
  },
  {
    title: '¿Cuándo está listo mi bebé para empezar la alimentación complementaria?',
    excerpt: 'Detecta las señales que indican que tu bebé está preparado para comenzar con sólidos y cómo hacerlo paso a paso.',
    img: '/newsletterpics/alimentacion_complementaria.jpg',
    url: '/newsletter/alimentación_complementaria',
  }
