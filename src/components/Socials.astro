<section id="socials" class="py-12 mt-20 px-6 bg-gray-100">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-extrabold mb-6">
      Síguenos en redes sociales
    </h2>
    <p class="text-lg text-gray-600 mb-8">
      Conéctate con Infantem y forma parte de nuestra comunidad.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
      {socials.map((social) => (
        <a
          href={social.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white shadow-lg rounded-3xl p-6 text-center transition-transform duration-300 hover:scale-105 hover:shadow-2xl"
        >
          <img
            src={social.img}
            alt={social.name}
            class="w-12 h-12 mx-auto mb-4 transition-transform duration-300 group-hover:scale-125"
          />
          <h3 class="text-xl font-semibold mb-2">{social.name}</h3>
          <p class="text-gray-600 text-sm">{social.description}</p>
        </a>
      ))}
    </div>

