---
const { title, description, image } = Astro.props;
---

<div id="features" class="w-full sm:w-1/2 lg:w-1/3 p-4">
	<img class="w-[1000px] h-[300px] object-cover rounded-lg " src={image} width={200} height={200} alt={title} />
	<h3 class="font-bold text-lg mt-2">{title}</h3>
	<p class="text-gray-700 ">{description}</p
</div>
