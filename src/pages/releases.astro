---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="flex-grow flex flex-col items-center justify-center p-6 mt-30">
        <div class="max-w-4xl w-full bg-[#f1faff] rounded-2xl shadow-lg overflow-hidden">
            <div class="bg-[#1D78AC] text-white py-4 px-6">
                <h1 class="text-3xl font-bold text-center">Lanzamientos de Infantem</h1>
            </div>
            
            <div class="grid md:grid-cols-2 gap-6 p-8">
                <div class="bg-white border border-blue-100 rounded-xl p-6 transform transition-all hover:scale-105 hover:shadow-md">
                    <h2 class="text-2xl font-semibold mb-4">Primer sprint</h2>
                    <div class="flex items-center justify-between">
                        <a 
                            href="https://ispp-2425-g8-s1.ew.r.appspot.com" 
                            target="_blank" 
                            class="text-[#1D78AC] hover:text-[#] font-medium underline"
                        >
                            Ver lanzamiento 
                        </a>
                        <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-bold">
                            Disponible 
                        </span>
                    </div>
                </div>

                <div class="bg-white border border-blue-100 rounded-xl p-6 transform transition-all hover:scale-105 hover:shadow-md">
                    <h2 class="text-2xl font-semibold mb-4">Segundo sprint</h2>
                    <div class="flex items-center justify-between">
                        <a 
                            href="https://ispp-2425-g8-s2.ew.r.appspot.com" 
                            target="_blank" 
                            class="text-[#1D78AC] hover:text-[#] font-medium underline"
                        >
                            Ver lanzamiento 
                        </a>
                        <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-bold">
                            Disponible 
                        </span>
                    </div>
                </div>

                <div class="bg-white border border-blue-100 rounded-xl p-6 transform transition-all hover:scale-105 hover:shadow-md">
                    <h2 class="text-2xl font-semibold mb-4">Tercer sprint</h2>
                    <div class="flex items-center justify-between">
                        <a 
                            href="https://ispp-2425-g8-s3.ew.r.appspot.com" 
                            target="_blank" 
                            class="text-[#1D78AC] hover:text-[#] font-medium underline"
                        >
                            Ver lanzamiento 
                        </a>
                        <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-bold">
                            Disponible 
                        </span>
                    </div>
                </div>

                <div class="bg-white border border-blue-100 rounded-xl p-6 opacity-60">
                    <h2 class="text-2xl font-semibold mb-4">Versión final</h2>
                    <div class="flex items-center justify-between">
                        <span class="text-gray-500">¡Próximamente!</span>
                        <span class="bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm font-bold">
                            Pendiente 
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    /* Subtle background animation */
    @keyframes subtle-pulse {
        0%, 100% { background-color: #f0f8ff; }
        50% { background-color: #e6f2ff; }
    }

    .bg-blue-50 {
        animation: subtle-pulse 5s ease-in-out infinite;
    }
</style>
